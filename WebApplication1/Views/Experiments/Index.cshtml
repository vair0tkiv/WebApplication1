                   asp-route-idworker="@(Model.FilterViewModel.SelectedIdWorker)">Laboratory</a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@(Model.SortViewModel.IdWorkerAscSort)"
                   asp-route-idexperiment="@(Model.FilterViewModel.SelectedIdExperiment)"
                   asp-route-idsample="@(Model.FilterViewModel.SelectedIdSample)"
                   asp-route-dates="@(Model.FilterViewModel.SelectedDates)"
                   asp-route-starttime="@(Model.FilterViewModel.SelectedStartTime)"
                   asp-route-endtime="@(Model.FilterViewModel.SelectedEndTime)"
                   asp-route-supposemass="@(Model.FilterViewModel.SelectedSupposeMass)"
                   asp-route-receivemass="@(Model.FilterViewModel.SelectedReceiveMass)"
                   asp-route-idlaboratory="@(Model.FilterViewModel.SelectedIdLaboratory)"
                   asp-route-idworker="@(Model.FilterViewModel.SelectedIdWorker)">Worker</a>
             </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Experiments) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdExperiment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSampleNavigation.NameSample)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dates)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupposeMass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReceiveMass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdLaboratoryNavigation.NumberLaboratory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdWorkerNavigation.Surname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdExperiment">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdExperiment">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdExperiment">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
        asp-route-idexperiment="@(Model.FilterViewModel.SelectedIdExperiment)"
        asp-route-idsample="@(Model.FilterViewModel.SelectedIdSample)"
        asp-route-dates="@(Model.FilterViewModel.SelectedDates)"
        asp-route-starttime="@(Model.FilterViewModel.SelectedStartTime)"
        asp-route-endtime="@(Model.FilterViewModel.SelectedEndTime)"
        asp-route-supposemass="@(Model.FilterViewModel.SelectedSupposeMass)"
        asp-route-receivemass="@(Model.FilterViewModel.SelectedReceiveMass)"
        asp-route-idlaboratory="@(Model.FilterViewModel.SelectedIdLaboratory)"
        asp-route-idworker="@(Model.FilterViewModel.SelectedIdWorker)"
        asp-route-sortorder="@(Model.SortViewModel.Current)"
       class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       asp-route-idexperiment="@(Model.FilterViewModel.SelectedIdExperiment)"
        asp-route-idsample="@(Model.FilterViewModel.SelectedIdSample)"
        asp-route-dates="@(Model.FilterViewModel.SelectedDates)"
        asp-route-starttime="@(Model.FilterViewModel.SelectedStartTime)"
        asp-route-endtime="@(Model.FilterViewModel.SelectedEndTime)"
        asp-route-supposemass="@(Model.FilterViewModel.SelectedSupposeMass)"
        asp-route-receivemass="@(Model.FilterViewModel.SelectedReceiveMass)"
        asp-route-idlaboratory="@(Model.FilterViewModel.SelectedIdLaboratory)"
        asp-route-idworker="@(Model.FilterViewModel.SelectedIdWorker)"
       asp-route-sortorder="@(Model.SortViewModel.Current)"
       class="btn btn-default btn">
        Вперед
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}